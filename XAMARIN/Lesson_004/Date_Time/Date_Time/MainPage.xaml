<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Date_Time.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <Label
            x:Name="label"
            FontSize="Medium"
            Text="Select a Date" />
        <DatePicker
            x:Name="datePicker"
            DateSelected="datePicker_DateSelected"
            Format="D">
            <DatePicker.MinimumDate>6/01/2016</DatePicker.MinimumDate>
            <DatePicker.MaximumDate>6/01/2050</DatePicker.MaximumDate>
        </DatePicker>

        <Label
            x:Name="TimeLabel"
            FontSize="Medium"
            Text="Выберите время" />
        <TimePicker
            x:Name="timePicker"
            PropertyChanged="timePicker_PropertyChanged"
            Time="17:00:00" />
    </StackLayout>

</ContentPage>
